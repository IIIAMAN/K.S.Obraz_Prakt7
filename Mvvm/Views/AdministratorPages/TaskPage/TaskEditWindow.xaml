<Window x:Class="TaskManagement.MVVM.Views.AdministratorPages.TasksPage.TaskEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Редактирование задачи" Height="600" Width="800">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#1976D2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#E3F2FD" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактировать задачу" FontSize="30" Foreground="#1976D2" HorizontalAlignment="Center" Margin="10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Заголовок задачи" Margin="0,0,0,5" Foreground="#1976D2"/>
            <TextBox Text="{Binding TaskTitle, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="30"/>

            <TextBlock Text="Описание задачи" Margin="10,0,0,5" Foreground="#1976D2"/>
            <TextBox Text="{Binding TaskDescription, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

            <TextBlock Text="Дата создания" Margin="10,0,0,5" Foreground="#1976D2"/>
            <TextBox Text="{Binding TaskCreationDate, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="30" IsReadOnly="True"/>

            <TextBlock Text="Срок выполнения" Margin="10,0,0,5" Foreground="#1976D2"/>
            <TextBox Text="{Binding TaskDueDate, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="30"/>

            <TextBlock Text="Статус" Margin="10,0,0,5" Foreground="#1976D2"/>
            <ComboBox ItemsSource="{Binding Statuses}" DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding SelectedStatusId}" Width="400" Height="30"/>

            <TextBlock Text="Проект" Margin="10,0,0,5" Foreground="#1976D2"/>
            <ComboBox ItemsSource="{Binding Projects}" DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding SelectedProjectId}" Width="400" Height="30"/>

            <TextBlock Text="Приоритет" Margin="10,0,0,5" Foreground="#1976D2"/>
            <ComboBox ItemsSource="{Binding Priorities}" DisplayMemberPath="Name" SelectedValuePath="ID" SelectedValue="{Binding SelectedPriorityId}" Width="400" Height="30"/>

            <TextBlock Text="Создано" Margin="10,0,0,5" Foreground="#1976D2"/>
            <TextBox Text="{Binding TaskCreatedBy, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="30" IsReadOnly="True"/>

            <TextBlock Text="Дата обновления" Margin="10,0,0,5" Foreground="#1976D2"/>
            <TextBox Text="{Binding TaskUpdatedAt, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="30" IsReadOnly="True"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Сохранить" Width="100" Command="{Binding SaveCommand}" Margin="0,0,10,0"/>
            <Button Content="Отмена" Width="100" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
